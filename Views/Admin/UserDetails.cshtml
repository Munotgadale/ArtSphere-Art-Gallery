@{
    ViewData["Title"] = "User-Details";
}
@model Project.DTO.UserView

<h2>User Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.Id</dd>
        <dt>First Name</dt>
        <dd>@Model.FirstName</dd>
        <dt>Last Name</dt>
        <dd>@Model.LastName</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
    </dl>
</div>

<p>
    <a asp-action="GetAllUsers" class="btn btn-outline-success">Back to List</a>
</p>
